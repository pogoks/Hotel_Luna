<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">

    // 상단바 3개 아이콘 들어가는 레이아웃
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#100c3e">

        <!-- 상단바 버튼 값의 설정 -->
        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_back"
            android:id="@+id/btn_back"
            android:visibility="invisible">
        </Button>

        <Button
            android:layout_width="120dip"
            android:layout_height="70dip"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/lunalogo"
            android:id="@+id/btn_lunalogo"> //로고버튼 아이디지정
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#100c3e">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="- 가입 완료 -"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="320dip"
                android:layout_height="350dip"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="50dip"
                android:id="@+id/rectangle"/>

            <TextView
                android:layout_width="320dip"
                android:layout_height="50dip"
                android:layout_marginTop="15dip"
                android:gravity="center_horizontal"
                android:layout_alignLeft="@id/rectangle"
                android:paddingLeft="10dip"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="호텔 루나의 회원이 되신 것을"/>

            <TextView
                android:layout_width="320dip"
                android:layout_height="50dip"
                android:layout_marginTop="60dip"
                android:gravity="center_horizontal"
                android:layout_alignLeft="@id/rectangle"
                android:paddingLeft="10dip"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="진심으로 환영합니다!"/>

            <TextView
                android:layout_width="320dip"
                android:layout_height="50dip"
                android:layout_marginTop="200dip"
                android:gravity="center_horizontal"
                android:layout_alignLeft="@id/rectangle"
                android:paddingLeft="10dip"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="최고의 서비스로"/>

            <TextView
                android:layout_width="320dip"
                android:layout_height="50dip"
                android:layout_marginTop="250dip"
                android:gravity="center_horizontal"
                android:layout_alignLeft="@id/rectangle"
                android:paddingLeft="10dip"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="보답하겠습니다!"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_button"
        android:layout_gravity="bottom"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/btn_login" />
    </LinearLayout>

</LinearLayout>