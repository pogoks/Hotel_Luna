                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dip"
                                    android:background="#D3D3D3" />
                                //제주루나호텔
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="20dp"
                                    android:textSize="15sp"
                                    android:text=" 호텔루나 제주"
                                    android:textStyle="bold"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dip"
                                    android:background="#D3D3D3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="60dp"
                                    android:textSize="15sp"
                                    android:text=" 대표전화                                                010-5480-7429\n 객실예약                                                010-5480-7429\n * 평일(월~금요일) 09:00~18:00, 주말 및 공휴일 9:00~16:00"
                                    android:textStyle="bold"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dip"
                                    android:background="#D3D3D3" />
                                //속초루나호텔
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="20dp"
                                    android:textSize="15sp"
                                    android:text=" 호텔루나 속초"
                                    android:textStyle="bold"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dip"
                                    android:background="#D3D3D3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="60dp"
                                    android:layout_marginBottom="30dp"
                                    android:textSize="15sp"
                                    android:text=" 대표전화                                                010-4122-9142\n 객실예약                                                010-4122-9142\n * 평일(월~금요일) 09:00~18:00, 주말 및 공휴일 10:00~16:00"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </ScrollView>
                    </LinearLayout>
                    //컨텐트2끝
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </RelativeLayout>
</LinearLayout>