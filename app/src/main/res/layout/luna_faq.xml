                                    android:textStyle="bold"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dip"
                                    android:background="#D3D3D3" />

                                <TextView
