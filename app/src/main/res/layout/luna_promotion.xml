<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#100c3e">

        <!-- 상단바 버튼 값의 설정 -->
        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_back"
            android:id="@+id/btn_back">
        </Button>

        <Button
            android:layout_width="120dip"
            android:layout_height="70dip"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/lunalogo"
            android:id="@+id/btn_lunalogo"> //로고버튼 아이디지정
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#100c3e">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="- 프로모션 -"/>

    </LinearLayout>

    // 스크롤뷰안에 이벤트들이 들어감
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_copy1"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:src="@drawable/copy1"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삼성페이 제휴 EVENT"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.06.10 ~ 2020.12.31"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp" />
            <View
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />


            <ImageView
                android:id="@+id/btn_copy2"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:src="@drawable/copy2"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="호텔루나 - 부산 -  Grand Open! "
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.08.02 ~ 2020.12.31"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp" />
            <View
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />

            <ImageView
                android:id="@+id/btn_copy3"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:src="@drawable/copy3"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="호텔 델루나 아이유 x 여진구 초청공연"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.09.14 ~ 2020.11.31"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp" />
            <View
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />

            <ImageView
                android:id="@+id/btn_copy4"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:src="@drawable/copy4"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020년 시즌 전 지점 와인바 무료제공 서비스"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.06.10 ~ 2020.12.31"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp" />
            <View
                android:layout_marginTop="20dip"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />

        </LinearLayout>
    </ScrollView>




</LinearLayout>