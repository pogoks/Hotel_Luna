<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#100c3e">

        <!-- 상단바 버튼 값의 설정 -->
        <Button
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_back"
            android:id="@+id/btn_back"> //메뉴버튼 아이디지정
        </Button>

        <Button
            android:layout_width="120dip"
            android:layout_height="70dip"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/lunalogo"
            > //로고버튼 아이디지정
        </Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#100c3e">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="- 회원정보 입력 -"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />

    //회원정보입력 텍스트문구
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>
    //EditText,textview,Button 들어가는 레이아웃
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="아이디"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="83dip"
            android:id="@+id/edit_id"
            android:background="@drawable/edittext_rounded"/>

        <Button
            android:layout_width="78dip"
            android:layout_height="35dip"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="2dip"
            android:text="중복확인"
            android:id="@+id/btn_check"> //중복확인 버튼 아이디 지정
        </Button>

        <CheckBox
            android:layout_marginTop="7dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_id"
            android:enabled="false"
            android:checked="false"
            android:visibility="visible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="성명"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="150dip"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="103dip"
            android:id="@+id/edit_name"
            android:background="@drawable/edittext_rounded"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="비밀번호"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="64dip"
            android:inputType="textPassword"
            android:id="@+id/edit_password"
            android:background="@drawable/edittext_rounded"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="비밀번호 확인"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="24dip"
            android:inputType="textPassword"
            android:id="@+id/edit_passwordcheck"
            android:background="@drawable/edittext_rounded"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="주민번호"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="64dip"
            android:id="@+id/edit_ssn"
            android:background="@drawable/edittext_rounded"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text=" - "
            android:textSize="20dp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="1dip"
            android:background="@android:drawable/editbox_background"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:entries="@array/gender_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="******"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="핸드폰번호"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_hp1"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:background="@android:drawable/editbox_background"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:entries="@array/phone_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:text=" - "
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="5dip"
            android:id="@+id/edit_hp2"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:text=" - "
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="5dip"
            android:id="@+id/edit_hp3"
            android:background="@drawable/edittext_rounded"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="10dip"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:id="@+id/edit_email1"
            android:background="@drawable/edittext_rounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="5dip"
            android:text=" @ "
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_email2"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="5dip"
            android:background="@android:drawable/editbox_background"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:entries="@array/email_name"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_button"
            android:layout_gravity="bottom"
            android:text="가입하기"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/btn_join" />

    </LinearLayout>

</LinearLayout>